<div id="form">
    <form action="/addCategories" method="POST">
      <div>
        <label>Categories Domain :</label>   
        <input type="text" name="categoriesDomain"  placeholder="Enter Categories Domain Name" required>
      </div>

     <div>
        <label>Image Url :</label>   
        <input type="text" name="imageUrl"  placeholder="Enter Image URL" required autocomplete="off">
    </div>

     <div>
        <label>Categories Name :</label>   
        <input type="text" name="categoriesName"  placeholder="Like Men-shirt Men-jeans Mobiles" required>
    </div>

     <div>
        <label>Off Percent :</label>   
        <input type="text" name="offPercent"  placeholder="Enter Discount Percent" required>
    </div>

    <div>
      <label>Original Name :</label>   
      <input type="text" name="originalName"  placeholder="Enter Original Name" required>
  </div>

    <div class="submitButton">
        <input id="submit" type="submit" value="Add Categories">
    </div>

    </form>

</div>